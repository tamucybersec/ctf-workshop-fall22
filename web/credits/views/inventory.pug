    .page-header
      h1 Online Store
    .container.row
      h1 Hi, Welcome to your Inventory
      if hifive != null
        h2 Hi-Five:
        pre
          p #{hifive}
      else
        p Hi-Five: Unavailable
        br
      if haiku != null
        h2 Haiku:
        pre
          p #{haiku}
      else
        p Haiku: Unavailable
        br
      if story != null
        h2 Story:
        pre
          p #{story}
      else
        p Story: Unavailable
        br
      if flag != null
        h2 Flag:
        pre
          p #{flag}
      else
        p Flag: Unavailable
        br
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script.
      function changeCreditDom(message) {
      document.getElementById("numcredits").innerHTML = message;
      return;
      }
      $("#generate").click(function() {
      $.ajax({
      url: '/newcredit',
      method: 'POST',
      data: {
      increment: 1
      }
      }).done(function(data) {
      if (data.success) {
      changeCreditDom(data.message);
      return;
      }
      }).fail(function() {
      console.log('failed...');
      return;
      });
      });
      $("button.store").click(function() {
      var thisId = $(this).attr('id');
      $.ajax({
      url: '/purchase',
      method: 'POST',
      data: {
      item: thisId
      }
      }).done(function(data) {
      if (data.success) {
      changeCreditDom(data.remaining_credits);
      alert(data.message);
      return;
      }
      }).fail(function() {
      console.log('failed...');
      return;
      });
      });

